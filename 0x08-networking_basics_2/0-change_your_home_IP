#!/usr/bin/env bash
# configures an ubuntu server to resolve localhost to 127.0.0.2
# and  facebook.com to 8.8.8.8.

cp /etc/hosts /tmp/hosts.back_up

sed -i 's/^127.0.0.1 localhost/127.0.0.2 localhost/g' /tmp/hosts.back_up
echo "8.8.8.8 facebook.com" >> /tmp/hosts.back_up

cp -f /tmp/hosts.back_up /etc/hosts
